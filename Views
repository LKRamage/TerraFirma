--View1
DROP VIEW View_1;
CLEAR COMPUTE
CLEAR BREAK
TTITLE OFF
SET FEEDBACK OFF
SET Pagesize 75
SET Linesize 100
Column Flight_Date FORMAT A11
CREATE VIEW View_1 AS
SELECT Flight_Nbr, Flight_Date, Capacity - COUNT(Cust_Nbr) AS Seats_Available
FROM Reservation
JOIN Sched_Flight USING (Flight_Nbr, Flight_Date)
JOIN Aircraft_Type USING (Serial_Nbr)
JOIN Aircraft_Data USING (AD_Type)
GROUP BY Flight_Nbr, Flight_Date, Capacity;
TTITLE 'View 1'
BREAK ON r.Flight_Nbr;
SELECT * FROM View_1;
--View2
DROP VIEW View_2;
CLEAR COMPUTE
CLEAR BREAK
TTITLE OFF
SET FEEDBACK OFF
SET Pagesize 75
SET Linesize 100
CREATE VIEW View_2 AS
SELECT Dep_Aprt_Code, Flight_Nbr, Flight_Date, Cust_Nbr
FROM Sched_Flight
LEFT JOIN Reservation using (Flight_Nbr, Flight_Date)
JOIN Flight_Data using (Flight_Nbr);
Select * FROM View_2;
commit;